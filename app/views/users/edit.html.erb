<div class="mx-auto w-full max-w-md">
  <h1 class="font-hairline mb-6 text-center">Profile</h1>
  <%= form_with model: @user, class: "bg-white mb-4 px-8 pt-6 pb-8 rounded shadow-md" do |f| %>
    <div class="mb-4">
      <%= image_tag @user.avatar.representation(resize_to_limit: [200, 200]), class: "user-avatar" if @user.avatar.attached? %>
    </div>
    <div class="mb-4">
      <%= f.label :email, class: "block font-bold mb-2 text-gray-700 text-sm" %>
      <%= f.text_field :name, class: "input w-full" %>
    </div>
    <div class="mb-4">
      <%= f.label :username, class: "block font-bold mb-2 text-gray-700 text-sm" %>
      <%= f.text_field :username, class: "input w-full" %>
    </div>
    <div class="mb-4">
      <%= f.label :avatar, class: "block font-bold mb-2 text-gray-700 text-sm" %>
      <%= f.file_field :avatar, class: "input w-full" %>
    </div>
    <div class="mb-4">
      <%= f.submit "Save", class: "button" %>
    </div>
  <% end %>
</div>
